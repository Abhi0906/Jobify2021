<% layout('layouts/boilerplate') %>
    <h1 class="mt-4 mb-4 text-center">Job Availability</h1>

    <div id="cluster-map">
    </div>


    <h2 class="mt-4 mb-4 text-center">All Jobs</h2>

    <% for(let job of jobs){ %>
        <div id="showPage" class="card mb-3">
            <div class="row">
                <div class="col-md-5">
                    <% if(job.images.length) { %>
                        <img id="hello" class="img-fluid" src="<%=job.images[0].thumbnail%>" alt="">
                        <% }else{ %>
                            <img class="img-fluid"
                                src="https://images.unsplash.com/photo-1593642634524-b40b5baae6bb?ixid=MnwxMjA3fDF8MHxlZGl0b3JpYWwtZmVlZHw2fHx8ZW58MHx8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=60"
                                alt="">
                            <% } %>
                </div>
                <div class="col-lg-4 ms-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= job.title %>
                        </h5>
                        <p>
                            <%= job.description %>
                        </p>
                        <p> Location:
                            <%= job.location %>
                        </p>
                        <p>
                            Recruiting Company: <%= job.company %>
                        </p>
                        <a class="btn btn-primary" href="/jobs/<%=job.id%> ">View Job</a>
                    </div>
                </div>
            </div>
        </div>

        <% } %>
            <script>
                let jobs = { features: JSON.parse('<%- JSON.stringify(jobs) %>') }
            </script>
            <script src="/javascripts/clusterMap.js"></script>