<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center mt-4">New Job</h1>
        <div class="col-6 offset-3">
            <form action="/jobs" method="POST" class="validatedform mb-3" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="job[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="company">Company</label>
                    <input class="form-control" type="text" id="company" name="job[company]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="job[description]"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="job[location]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-2">
                    <label class="form-label" for="image">Upload Images</label>
                </div>
                <div class="input-group mb-3">
                    <input type="file" name="image" class="form-control" id="image" multiple required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <p class="text-muted ms-1 mt-1">Note: Uploading Images may take a while depending on the size and
                        number
                        of
                        images (Ideal image count: 3, size: h-300px, w-550px)</p>

                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Job</button>
                </div>
            </form>
        </div>
    </div>