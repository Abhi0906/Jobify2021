<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center mt-4">Edit Job</h1>
        <div class="col-6 offset-3">
            <form action="/jobs/<%= job._id %>?_method=PUT " method="POST" novalidate class="validatedform mb-3"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="job[title]" value="<%= job.title%>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="company">Company</label>
                    <input class="form-control" type="text" id="company" name="job[company]" value="<%= job.company%>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class=" mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="job[description]"
                        required><%= job.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="job[location]"
                        value="<%= job.location%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="file" name="image" class="form-control" id="image" multiple>
                    <label class="input-group-text" for="image">Upload Images</label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <p class="text-muted ms-1 mt-1">Note: Uploading Images may take a while depending on the size and
                        number
                        of
                        images (Ideal image count: 3, size: h-300px, w-550px)</p>
                </div>
                <div class="mb-3">
                    <% job.images.forEach(function(img,i){ %>
                        <div class="d-block">
                            <img src="<%= img.thumbnail%>" class="img-thumbnail" alt="">
                        </div>
                        <div class="form-check-inline">
                            <input type="checkbox" id="img-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="img-<%=i%>">Delete?</label>
                        <%})%>
                </div>
                <button class="btn btn-success">Update</button>
                <a class="btn btn-info" href="/jobs/<%= job._id%>">Cancel</a>
            </form>
        </div>
    </div>