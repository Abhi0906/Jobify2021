<body class="d-flex flex-column text-white bg-dark">
    <div class="container p-3 flex-row">
        <header class="mb-auto">
            <div>
                <nav class="navbar  float-md-right">
                    <h3 class=" justify-content-left float-md-left mb-0 ">Jobify</h3>
                    <span class="justify-content-end">
                        <a class="nav-link active d-inline" aria-current="page" href="#">Home</a>
                        <a class="nav-link d-inline" href="/jobs">Jobs</a>
                        <% if(!currentUser){ %>
                            <a class="nav-link d-inline" href="/register">Register</a>
                            <a class="nav-link d-inline" href="/login">Login</a>
                            <% } else{ %>
                                <a class="nav-link d-inline" href="/logout">Logout</a>
                                <% } %>
                    </span>
                </nav>
            </div>
        </header>
    </div>
    <div class="mainn">
        <main class="px-3 text-center">
            <h1>WELCOME TO JOBIFY</h1>
